/ ユーザー編集ページに遷移するためのパスを追加
.side-bar
  .header
    %h3.header__name
      = current_user.name
    .header__lists
      = link_to new_group_path, class: 'list' do
        = fa_icon 'pencil-square-o', class: 'icon'
      = link_to edit_user_registration_path, class: 'list' do
        = fa_icon 'cog', class: 'icon'
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
