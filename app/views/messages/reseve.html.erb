  <body>
    <div class="notification">
      <div class="notice">チャットグループが作成されました。</div>
    </div>

    <div class="wrapper">
      <div class="side-ber">
        <div class="header">
          <h3 class="header__name">
            Sample
          </h3>
          <ul class="header__lists">
            <li class=list>
              <a href="/groups/new">
                <i class="fa fa-pencill-square-o icon">
                  ::before
                </i>
              </a>
            </li>
            <li class="list">
              <a href="/users/4352/edit">
                <i class="fa fa-cog icon">
                  ::before
                </i>
              </a>
            </li>
          </ul>
        </div>

        <div class="groups">
          <div class="group">
            <a href="/groups/11172/messages">
              <div class="group__name">
                サンプル
              </div>
              <div class="group__message">
                よろしくお願いします
              </div>
            </a>
          </div>
        </div>
      </div>
<!--- ここからchatのところ-->
      <div class="chat">
        <div class="header">
          <div class="left-header">
            <div class="left-header__title">
              sample
            </div>
            <ul class="left-header__members">
              "
              Members:
              "
              <li class="member">
                seo neko
              </li>
            </ul>
          <div class="rigth-header">
            <a class="right-header__bottom" href="11172/edit">Edit</a>
          </div>
        <div class="contents">
            <div class="messages js-messages">
            <div class="message"></div>
            <div class="message"></div>
          </div>
        <div class="footer">
          <div class="footer__from">
            <!-- ここはコピペしていいか迷うので保留 -->
            <div class="from__mask">
              <label class="form__mask__image" for="message_image">
                <i class="fa fa-picture-o icon">
                  ::before
                </i>
                <!-- ここからしたは著作権的によろしくないかも？変える必要あるかも。-->
                <input class="hidden js-file" type="file" name="message[image]" id="message_image">
              </label>
            </div>
            <input type="submit" name="commit" value="Send" class="form_submit" data-disble-with="Send">
          </div>
        </div>
      </div>
    </div>
  </body>
